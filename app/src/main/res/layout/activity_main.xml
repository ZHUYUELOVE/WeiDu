<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".MainActivity">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="170dp"
          android:layout_marginEnd="-23dp"
          android:layout_marginRight="-23dp"
          android:layout_toStartOf="@+id/login"
          android:layout_toLeftOf="@+id/login"
          android:src="@drawable/login_icon_phone_n_xxhdpi"
          />
      <EditText
          android:id="@+id/login"
          android:layout_width="280dp"
          android:layout_height="50dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="160dp"
          android:hint="        手机号"
          android:textColorHint="#fff"
          android:textSize="20dp"
          />
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_marginTop="239dp"
             android:layout_marginEnd="-21dp"
             android:layout_marginRight="-21dp"
             android:layout_toStartOf="@+id/password"
             android:layout_toLeftOf="@+id/password"
             android:padding="1dp"
             android:src="@drawable/login_icon_lock_n_xxhdpi"
             />
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_marginTop="251dp"
             android:layout_marginEnd="-273dp"
             android:layout_marginRight="-273dp"
             android:layout_toStartOf="@+id/password"
             android:layout_toLeftOf="@+id/password"
             android:padding="1dp"
             android:src="@drawable/login_icon_eye_n_xxhdpi"
             />
           <EditText
               android:id="@+id/password"
               android:layout_width="280dp"
               android:layout_height="50dp"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="231dp"
               android:hint="          登录密码"
               android:textColorHint="#fff"
               android:textSize="20dp"
               />
      <Button
          android:id="@+id/btn_login"
          android:layout_width="280dp"
          android:layout_height="40dp"
          android:text="登录"
          android:layout_centerHorizontal="true"
          android:textSize="18sp"
          android:background="@drawable/shape_item"
          android:textColor="#f00"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="130dp"
          />
         


</RelativeLayout>